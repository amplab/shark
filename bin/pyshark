# Figure out where the Scala framework is installed
FWDIR="$(cd `dirname $0`/..; pwd)"

# Export this as SHARK_HOME
export SHARK_HOME="$FWDIR"

SCALA_VERSION=2.10

# Exit if the user hasn't compiled Shark
if [ ! -f "$FWDIR/RELEASE" ]; then
  # Exit if the user hasn't compiled Shark
  ls "$FWDIR"/target/scala-$SCALA_VERSION/shark-assembly*hadoop*.jar >& /dev/null
  if [[ $? != 0 ]]; then
    echo "Failed to find Shark assembly in $FWDIR/target" >&2
    echo "You need to build Shark with sbt/sbt assembly before running this program" >&2
    exit 1
  fi
fi

. $FWDIR/bin/load-shark-env.sh

# Figure out which Python executable to use
if [ -z "$PYSPARK_PYTHON" ] ; then
  PYSPARK_PYTHON="python"
fi
export PYSPARK_PYTHON

# Add the PyShark/PySpark classes to the Python path:
export PYTHONPATH=:$SPARK_HOME/python/:$SHARK_HOME/python/:$PYTHONPATH

# Load the PyShark shell.py script when ./pyshark is used interactively:
export OLD_PYTHONSTARTUP=$PYTHONSTARTUP
export PYTHONSTARTUP=$FWDIR/python/pyshark/shell.py

if [ -n "$IPYTHON_OPTS" ]; then
  IPYTHON=1
fi

if [[ "$IPYTHON" = "1" ]] ; then
  exec ipython $IPYTHON_OPTS
else
  exec "$PYSPARK_PYTHON" "$@"
fi
